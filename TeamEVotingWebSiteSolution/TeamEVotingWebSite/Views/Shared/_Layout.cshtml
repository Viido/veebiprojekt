<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta keywords ="HTML, CSS, JQUERY, C#"/>
    <meta author="Koit Kõrvel"/>
    <meta content="Electronic Voting Application helps users to candidate and vote for candidates."
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title - Electronic Voting Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Electronic Voting application", "WelcomePage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Welcome Page", "WelcomePage", "Home")</li>*@

                        <li>@Html.ActionLink("Factions", "Index", "Factions")</li>

                        <li>@Html.ActionLink("Regions", "Index", "Regions")</li>

                        <li>@Html.ActionLink("Candidates", "Index", "Candidates")</li>

                        <li>@Html.ActionLink("Statistics of candidates", "GroupCandidates", "Candidates")</li>

                        <li>@Html.ActionLink("Raw Sql", "Index", "RawSql")</li>
                    </ul>
                </div>
            </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>